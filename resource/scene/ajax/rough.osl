surface rough
    [[ string description = "Microfacet surface" ]]
(
    color Cs = 1
        [[  string description = "Base color",
            float UImin = 0, float UImax = 1 ]],
    float roughness = 0.28
        [[  string description = "Roughness",
            float UImin = 0, float UImax = 1 ]]
)
{
    Ci = Cs * kp_microfacet(roughness, 1.5, 1.004, 0.3);
}