<Scene>
    <Film width="float 800" height="float 600" />

    <Camera position="float3 7 8 15" lookat="float3 0, 3 -20" up="float3 0 1 0" fov="float 60" />

    <Materials>
        <ShaderGroup name="checker_matte">
            <Shader name="checkerboard" layer="tex">
                <Parameter scale_s="float 20" />
                <Parameter scale_t="float 20" />
                <Parameter Ca="float3 0.1 0.1 0.1" />
                <Parameter Cb="float3 0.5 0.5 0.5" />
            </Shader>
            <Shader name="matte" layer="layer1" />
            <ConnectShaders srclayer="tex" srcparam="Cout" dstlayer="layer1" dstparam="Cs" />
        </ShaderGroup>
    </Materials>

    <Objects>
        <Sphere radius="float 3" translate="float3 0 5 -20" shader_name="string checker_matte" />
        <Triangle verta="float3 0 0 0" vertb="float3 2 0 0" vertc="float3 0 2 0" translate="float3 0 0 -10" shader_name="string checker_matte" />
    </Objects>

    <Lights>
        <PointLight radiance="float3 0.3 0.9 0.3" position="float3 0 10 -20" />
    </Lights>

    <Accelerator type="bvh" />
    <Integrator type="pt" />

</Scene>